{
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": "tsconfig.json" },
  "env": { "browser": true, "es6": true, "worker": true }, // for allowJs
  // see https://github.com/preactjs/preact-cli/blob/v3.0.0-rc.9/.eslintrc#L20
  "settings": { "react": { "version": "preact", "pragma": "h" } },
  "plugins": ["@typescript-eslint", "react-hooks"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking",
    "plugin:react/recommended",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/react"
  ],
  "rules": {
    // see https://reactjs.org/docs/hooks-rules
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/prop-types": "off",
    "react/no-unknown-property": [2, { "ignore": ["class", "spellcheck"] }],
    "@typescript-eslint/no-use-before-define": ["error", "nofunc"]
  },
  "overrides": [
    // see https://github.com/typescript-eslint/typescript-eslint/issues/906
    {
      "files": ["*.js", "*.jsx"],
      "rules": { "@typescript-eslint/explicit-function-return-type": "off" }
    }
  ]
}
