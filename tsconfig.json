{
  "compilerOptions": {
    "target": "es2017", // for async/await
    // see https://github.com/microsoft/TypeScript/issues/16675
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": true,
    "outDir": "dist", // for allowJs
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  // see https://github.com/typescript-eslint/typescript-eslint/issues/890
  "include": ["src/**/*"]
}
